<div class="container">
    <h2>Contacts</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>EmployeeID</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Title</th>
                <th>BirthDate</th>
                <th>HireDate</th>
                <th>Address</th>  
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>                   
                    <td>@item.EmployeeID</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Title</td>
                    <td>@item.BirthDate</td>
                    <td>@item.HireDate</td>
                    <td>@item.Address</td>
                </tr>
                }           
        </tbody>
    </table>
</div>